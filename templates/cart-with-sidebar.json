    "sidebar_close_wrapper": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "  </div>\n</div>\n\n<style>\n.page-layout-with-sidebar {\n  display: flex;\n  min-height: 100vh;\n  position: relative;\n  margin: 0;\n  padding: 0;\n}\n\n.sidebar-column {\n  flex-shrink: 0;\n  width: 300px;\n  position: sticky;\n  top: 0;\n  height: 100vh;\n  overflow-y: auto;\n}\n\n.content-column {\n  flex: 1;\n  width: 100%;\n  max-width: calc(100% - 300px);\n  padding-left: 0;\n}\n\n@media (max-width: 992px) {\n  .page-layout-with-sidebar {\n    flex-direction: column;\n  }\n\n  .sidebar-column {\n    width: 100%;\n    position: fixed;\n    top: 0;\n    left: 0;\n    z-index: 1000;\n    height: 0;\n    overflow: visible;\n  }\n\n  .content-column {\n    max-width: 100%;\n    padding-left: 0;\n  }\n}\n\n.mobile-sidebar-trigger {\n  position: fixed;\n  bottom: 20px;\n  right: 20px;\n  width: 60px;\n  height: 60px;\n  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);\n  color: white;\n  border: none;\n  border-radius: 50%;\n  box-shadow: 0 4px 20px rgba(193, 38, 36, 0.4);\n  cursor: pointer;\n  z-index: 999;\n  display: none;\n  align-items: center;\n  justify-content: center;\n  font-size: 24px;\n  transition: all 0.3s ease;\n}\n\n@media (max-width: 992px) {\n  .mobile-sidebar-trigger {\n    display: flex;\n  }\n}\n\n.mobile-sidebar-trigger:hover {\n  transform: scale(1.1);\n  box-shadow: 0 6px 30px rgba(193, 38, 36, 0.6);\n}\n</style>\n\n<button class=\"mobile-sidebar-trigger\" onclick=\"toggleSidebar()\" aria-label=\"Kategorien öffnen\">☰</button>"
      }
    }
  },
  "order": [
    "category_sidebar_wrapper",
    "cart_progress_bar_biNMDp",
    "cart-section",
    "related_products_KkfH6p",
    "sidebar_close_wrapper"
  ]
}
