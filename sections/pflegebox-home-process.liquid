{% comment %}
  Section: Pflegebox Process Steps - Home Page
  Mostra il processo in 4 step per ottenere la Pflegebox gratuita
{% endcomment %}

<style>
.pflegebox-home-process {
  max-width: 1000px;
  margin: 0 auto 60px;
  padding: 0 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.pflegebox-home-process-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20px;
  padding: 40px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  border: 2px solid #e9ecef;
  position: relative;
  overflow: hidden;
}

.pflegebox-home-process-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(90deg, #C12624 0%, #28a745 100%);
}

.pflegebox-home-process-title {
  font-size: 1.6rem;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 35px;
}

.pflegebox-home-steps {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  margin-bottom: 30px;
}

.pflegebox-home-step {
  text-align: center;
  padding: 20px 15px;
  position: relative;
  background: white;
  border-radius: 12px;
  border: 1px solid #e9ecef;
  transition: all 0.3s ease;
}

.pflegebox-home-step:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.pflegebox-home-step:not(:last-child)::after {
  content: '\2192';
  position: absolute;
  right: -18px;
  top: 40px;
  font-size: 1.5rem;
  color: #C12624;
  font-weight: bold;
  z-index: 1;
}

.pflegebox-home-step-number {
  width: 45px;
  height: 45px;
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  font-weight: 800;
  margin: 0 auto 12px;
  box-shadow: 0 4px 12px rgba(193, 38, 36, 0.3);
}

.pflegebox-home-step-icon {
  font-size: 2rem;
  margin-bottom: 10px;
  display: block;
}

.pflegebox-home-step-title {
  font-size: 1rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
}

.pflegebox-home-step-desc {
  font-size: 0.85rem;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15px;
}

.pflegebox-home-step-cta {
  display: inline-block;
  padding: 10px 18px;
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  font-size: 0.8rem;
  font-weight: 600;
  border-radius: 6px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.pflegebox-home-step-cta:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(193, 38, 36, 0.35);
  color: white;
}

.pflegebox-home-result {
  margin-top: 25px;
  padding: 25px;
  background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
  border-radius: 12px;
  border: 2px solid #28a745;
  text-align: center;
}

.pflegebox-home-result-icon {
  font-size: 2.5rem;
  margin-bottom: 10px;
}

.pflegebox-home-result-text {
  font-size: 1.1rem;
  font-weight: 600;
  color: #155724;
}

.pflegebox-home-result-amount {
  font-size: 1.8rem;
  font-weight: 900;
  color: #28a745;
  margin-top: 5px;
}

.pflegebox-home-main-cta {
  text-align: center;
  margin-top: 30px;
}

.pflegebox-home-main-cta-btn {
  display: inline-block;
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  padding: 18px 45px;
  border-radius: 50px;
  font-size: 1.2rem;
  font-weight: bold;
  text-decoration: none;
  box-shadow: 0 8px 25px rgba(193, 38, 36, 0.4);
  transition: all 0.3s ease;
  animation: pflegeboxHomePulse 3s infinite;
}

.pflegebox-home-main-cta-btn:hover {
  transform: translateY(-3px) scale(1.02);
  box-shadow: 0 12px 35px rgba(193, 38, 36, 0.5);
  color: white;
}

@keyframes pflegeboxHomePulse {
  0%, 100% {
    box-shadow: 0 8px 25px rgba(193, 38, 36, 0.4);
  }
  50% {
    box-shadow: 0 8px 25px rgba(193, 38, 36, 0.4),
                0 0 40px rgba(193, 38, 36, 0.3);
  }
}

@media (max-width: 900px) {
  .pflegebox-home-steps {
    grid-template-columns: repeat(2, 1fr);
    gap: 25px;
  }

  .pflegebox-home-step:not(:last-child)::after {
    display: none;
  }
}

@media (max-width: 550px) {
  .pflegebox-home-steps {
    grid-template-columns: 1fr;
  }

  .pflegebox-home-process-card {
    padding: 25px 20px;
  }

  .pflegebox-home-process-title {
    font-size: 1.3rem;
  }

  .pflegebox-home-main-cta-btn {
    font-size: 1rem;
    padding: 15px 35px;
  }
}
</style>

