{% comment %}
  Section: Categories Navigation
  - Seconda navbar per categorie prodotti
  - Stile coerente con la navbar principale
  - Completamente isolata con CSS namespaced
{% endcomment %}

<style>
  /* ========== PT-NAV - SECONDA NAVBAR CATEGORIE ========== */

  /* Reset per questa sezione */
  .pt-nav-section,
  .pt-nav-section * {
    box-sizing: border-box;
  }

  .pt-nav-section {
    font-family: var(--font-body--family, 'Inter', -apple-system, BlinkMacSystemFont, sans-serif);
    position: relative;
    width: 100%;
    background: #1a1a1a;
    z-index: 49;
  }

  .pt-nav-container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0;
  }

  .pt-nav-title {
    display: none;
  }

  .pt-nav-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 0;
    margin: 0;
    list-style: none;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .pt-nav-list::-webkit-scrollbar {
    display: none;
  }

  .pt-nav-item {
    flex-shrink: 0;
    margin: 0;
    padding: 0;
  }

  .pt-nav-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 14px 20px;
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    color: #ffffff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .pt-nav-link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-bottom-color: #C12624;
  }

  .pt-nav-link--active {
    background: rgba(193, 38, 36, 0.2);
    color: #ffffff;
    border-bottom-color: #C12624;
  }

  .pt-nav-icon {
    font-size: 14px;
  }

  .pt-nav-text {
    white-space: nowrap;
  }

  .pt-nav-count {
    font-size: 9px;
    background: rgba(255, 255, 255, 0.2);
    color: #fff;
    padding: 2px 6px;
    border-radius: 10px;
    margin-left: 4px;
  }

  .pt-nav-link:hover .pt-nav-count,
  .pt-nav-link--active .pt-nav-count {
    background: #C12624;
  }

  .pt-nav-divider {
    display: none;
  }

  .pt-nav-cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 10px 20px;
    margin: 4px 10px;
    background: #C12624;
    color: white !important;
    text-decoration: none;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    white-space: nowrap;
    border: none;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .pt-nav-cta:hover {
    background: #A01F1D;
    transform: translateY(-1px);
  }

  /* Mobile: scroll orizzontale, link pi√π compatti */
  @media screen and (max-width: 749px) {
    .pt-nav-list {
      justify-content: flex-start;
      padding: 0 10px;
    }

    .pt-nav-link {
      padding: 12px 14px;
      font-size: 11px;
    }

    .pt-nav-cta {
      padding: 8px 14px;
      font-size: 11px;
      margin: 4px 5px;
    }
  }

  /* Desktop: centrato con pi√π spazio */
  @media screen and (min-width: 750px) {
    .pt-nav-link {
      padding: 16px 24px;
      font-size: 13px;
    }
  }
</style>

<nav class="pt-nav-section" aria-label="Produktkategorien">
  <div class="pt-nav-container">
    <h2 class="pt-nav-title">Kategorien</h2>

    <ul class="pt-nav-list">
      <!-- Alle Produkte -->
      <li class="pt-nav-item">
        <a href="/collections/all" class="pt-nav-link {% if request.path == '/collections/all' or request.path == '/collections' %}pt-nav-link--active{% endif %}">
          <span class="pt-nav-icon">üì¶</span>
          <span class="pt-nav-text">Alle Produkte</span>
        </a>
      </li>

      <!-- Categorie dinamiche -->
      {% for collection in collections %}
        {% unless collection.handle == 'all' or collection.handle == 'frontpage' %}
          {% assign icon = 'üõí' %}
          {% case collection.handle %}
            {% when 'cbd-produkte' %}{% assign icon = 'üåø' %}
            {% when 'desinfektionmittel' %}{% assign icon = 'üß¥' %}
            {% when 'elektronik-gerate' %}{% assign icon = '‚ö°' %}
            {% when 'hausgemacht-spezialitaten' %}{% assign icon = 'üçØ' %}
            {% when 'hygiene' %}{% assign icon = 'üßº' %}
            {% when 'primavera' %}{% assign icon = 'üå∏' %}
            {% when 'rotbackchen' %}{% assign icon = 'üçé' %}
          {% endcase %}

          <li class="pt-nav-item">
            <a href="{{ collection.url }}" class="pt-nav-link {% if request.path contains collection.handle %}pt-nav-link--active{% endif %}">
              <span class="pt-nav-icon">{{ icon }}</span>
              <span class="pt-nav-text">{{ collection.title }}</span>
              {% if section.settings.show_count %}
                <span class="pt-nav-count">{{ collection.products_count }}</span>
              {% endif %}
            </a>
          </li>
        {% endunless %}
      {% endfor %}

      <!-- Divider e Pflegebox CTA -->
      <li class="pt-nav-divider" aria-hidden="true"></li>

      {% if section.settings.show_pflegebox %}
        <li class="pt-nav-item">
          <a href="/pages/pflegebox-formular" class="pt-nav-cta">
            <span class="pt-nav-icon">üí∂</span>
            <span>Kostenlose Pflegebox</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
</nav>

{% schema %}
{
  "name": "Kategorien Navigation",
  "tag": "section",
  "class": "pt-categories-section-wrapper",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "Produktanzahl anzeigen",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_pflegebox",
      "label": "Pflegebox CTA anzeigen",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Kategorien Navigation"
    }
  ]
}
{% endschema %}
