{% comment %}
  Section: Categories Navigation
  - Seconda navbar per categorie prodotti
  - Stile coerente con la navbar principale
  - Completamente isolata con CSS namespaced
{% endcomment %}

<style>
  /* ========== PT-NAV - SECONDA NAVBAR CATEGORIE ========== */

  /* Reset per questa sezione */
  .pt-nav-section,
  .pt-nav-section * {
    box-sizing: border-box;
  }

  .pt-nav-section {
    font-family: var(--font-body--family, 'Inter', -apple-system, BlinkMacSystemFont, sans-serif);
    position: relative;
    width: 100%;
    background: #1a1a1a;
    z-index: 1;
  }

  .pt-nav-container {
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0;
  }

  .pt-nav-title {
    display: none;
  }

  .pt-nav-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    gap: 0;
    padding: 0;
    margin: 0;
    list-style: none;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .pt-nav-list::-webkit-scrollbar {
    display: none;
  }

  .pt-nav-item {
    flex-shrink: 0;
    margin: 0;
    padding: 0;
  }

  .pt-nav-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 14px 20px;
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    color: #ffffff;
    text-decoration: none;
    font-size: 13px;
    font-weight: 500;
    white-space: nowrap;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .pt-nav-link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border-bottom-color: #C12624;
  }

  .pt-nav-link--active {
    background: rgba(193, 38, 36, 0.2);
    color: #ffffff;
    border-bottom-color: #C12624;
  }

  /* Mobile: scroll orizzontale, link più compatti */
  @media screen and (max-width: 749px) {
    .pt-nav-list {
      justify-content: flex-start;
      padding: 0 10px;
    }

    .pt-nav-link {
      padding: 12px 14px;
      font-size: 11px;
    }
  }

  /* Desktop: centrato con più spazio */
  @media screen and (min-width: 750px) {
    .pt-nav-link {
      padding: 16px 24px;
      font-size: 13px;
    }
  }
</style>

<nav class="pt-nav-section" aria-label="Produktkategorien">
  <div class="pt-nav-container">
    <h2 class="pt-nav-title">Kategorien</h2>

    <ul class="pt-nav-list">
      <!-- Alle Produkte -->
      <li class="pt-nav-item">
        <a href="/collections/all" class="pt-nav-link {% if request.path == '/collections/all' or request.path == '/collections' %}pt-nav-link--active{% endif %}">
          Alle Produkte
        </a>
      </li>

      <!-- Categorie dinamiche -->
      {% for collection in collections %}
        {% unless collection.handle == 'all' or collection.handle == 'frontpage' %}
          <li class="pt-nav-item">
            <a href="{{ collection.url }}" class="pt-nav-link {% if request.path contains collection.handle %}pt-nav-link--active{% endif %}">
              {{ collection.title }}
            </a>
          </li>
        {% endunless %}
      {% endfor %}
    </ul>
  </div>
</nav>

{% schema %}
{
  "name": "Kategorien Navigation",
  "tag": "section",
  "class": "pt-categories-section-wrapper",
  "settings": [],
  "presets": [
    {
      "name": "Kategorien Navigation"
    }
  ]
}
{% endschema %}
