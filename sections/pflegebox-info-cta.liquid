<style>
.pflegebox-info-wrapper {
  max-width: 1200px;
  margin: 60px auto;
  padding: 0 20px;
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

.pflegebox-info-card {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 20px;
  padding: 50px 60px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  border: 2px solid #e9ecef;
  position: relative;
  overflow: hidden;
}

.pflegebox-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 5px;
  background: linear-gradient(90deg, #C12624 0%, #28a745 100%);
}

.pflegebox-money-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  font-size: 2rem;
  font-weight: 900;
  padding: 15px 30px;
  border-radius: 12px;
  margin-bottom: 20px;
  box-shadow: 0 6px 20px rgba(40, 167, 69, 0.3);
}

.pflegebox-info-title {
  font-size: 2.2rem;
  font-weight: 900;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.2;
}

.pflegebox-info-description {
  font-size: 1.1rem;
  color: #555;
  margin-bottom: 35px;
  line-height: 1.6;
}

.pflegebox-question {
  font-size: 1.3rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 25px;
  text-align: center;
}

.pflegebox-options {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  margin-bottom: 30px;
}

.pflegebox-option-card {
  background: white;
  border: 3px solid #e9ecef;
  border-radius: 16px;
  padding: 30px;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
  position: relative;
}

.pflegebox-option-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.pflegebox-option-card.primary {
  border-color: #C12624;
  background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
}

.pflegebox-option-card.primary:hover {
  border-color: #A01F1D;
  box-shadow: 0 8px 30px rgba(193, 38, 36, 0.2);
}

.pflegebox-option-card.secondary {
  opacity: 0.85;
}

.pflegebox-option-icon {
  font-size: 3rem;
  margin-bottom: 15px;
  display: block;
}

.pflegebox-option-card.primary .pflegebox-option-icon {
  color: #C12624;
}

.pflegebox-option-card.secondary .pflegebox-option-icon {
  color: #6c757d;
}

.pflegebox-option-label {
  font-size: 1.2rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 10px;
}

.pflegebox-option-sublabel {
  font-size: 0.95rem;
  color: #666;
  margin-bottom: 20px;
}

.pflegebox-cta-btn {
  display: inline-block;
  padding: 15px 40px;
  font-size: 1.1rem;
  font-weight: 700;
  border-radius: 10px;
  text-decoration: none;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  font-family: inherit;
}

.pflegebox-cta-btn.primary {
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  box-shadow: 0 5px 15px rgba(193, 38, 36, 0.3);
}

.pflegebox-cta-btn.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(193, 38, 36, 0.4);
}

.pflegebox-cta-btn.secondary {
  background: #6c757d;
  color: white;
}

.pflegebox-cta-btn.secondary:hover {
  background: #5a6268;
  transform: translateY(-2px);
}

.pflegebox-badge {
  position: absolute;
  top: -12px;
  right: 20px;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: white;
  font-size: 0.75rem;
  font-weight: 700;
  padding: 6px 15px;
  border-radius: 20px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: 0 4px 10px rgba(255, 107, 107, 0.3);
}

.pflegebox-mehr-info {
  text-align: center;
  margin-top: 30px;
}

.pflegebox-mehr-info-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 1rem;
  color: #C12624;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.pflegebox-mehr-info-link:hover {
  color: #A01F1D;
  gap: 12px;
}

/* Process Steps */
.pflegebox-process {
  margin: 40px 0 30px 0;
  padding: 30px;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 16px;
  border: 2px solid #e9ecef;
}

.pflegebox-process-title {
  font-size: 1.3rem;
  font-weight: 700;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 30px;
}

.pflegebox-steps {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
}

.pflegebox-step {
  text-align: center;
  padding: 20px 10px;
  position: relative;
}

.pflegebox-step:not(:last-child)::after {
  content: '‚Üí';
  position: absolute;
  right: -15px;
  top: 35px;
  font-size: 1.5rem;
  color: #C12624;
  font-weight: bold;
}

.pflegebox-step-number {
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.4rem;
  font-weight: 800;
  margin: 0 auto 15px;
  box-shadow: 0 4px 12px rgba(193, 38, 36, 0.3);
}

.pflegebox-step-icon {
  font-size: 2rem;
  margin-bottom: 10px;
  display: block;
}

.pflegebox-step-title {
  font-size: 1rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 8px;
}

.pflegebox-step-desc {
  font-size: 0.85rem;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12px;
}

.pflegebox-step-cta {
  display: inline-block;
  padding: 8px 16px;
  background: linear-gradient(135deg, #C12624 0%, #A01F1D 100%);
  color: white;
  font-size: 0.8rem;
  font-weight: 600;
  border-radius: 6px;
  text-decoration: none;
  transition: all 0.3s ease;
  margin-top: 8px;
}

.pflegebox-step-cta:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(193, 38, 36, 0.35);
  color: white;
}

.pflegebox-main-cta {
  text-align: center;
  margin-top: 25px;
}

.pflegebox-main-cta .pflegebox-cta-btn {
  font-size: 1.2rem;
  padding: 18px 45px;
}

.pflegebox-result-box {
  margin-top: 25px;
  padding: 20px;
  background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
  border-radius: 12px;
  border: 2px solid #28a745;
  text-align: center;
}

.pflegebox-result-icon {
  font-size: 2.5rem;
  margin-bottom: 10px;
}

.pflegebox-result-text {
  font-size: 1.1rem;
  font-weight: 700;
  color: #155724;
}

.pflegebox-result-amount {
  font-size: 1.5rem;
  font-weight: 900;
  color: #28a745;
  margin-top: 5px;
}

@media (max-width: 768px) {
  .pflegebox-steps {
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  .pflegebox-step:not(:last-child)::after {
    display: none;
  }

  .pflegebox-step-number {
    width: 40px;
    height: 40px;
    font-size: 1.2rem;
  }

  .pflegebox-step-icon {
    font-size: 1.5rem;
  }

  .pflegebox-step-title {
    font-size: 0.9rem;
  }

  .pflegebox-step-desc {
    font-size: 0.8rem;
  }

  .pflegebox-step-cta {
    font-size: 0.75rem;
    padding: 6px 12px;
  }

  .pflegebox-main-cta .pflegebox-cta-btn {
    font-size: 1rem;
    padding: 14px 30px;
  }
}

@media (max-width: 480px) {
  .pflegebox-steps {
    grid-template-columns: 1fr;
  }

  .pflegebox-process {
    padding: 20px 15px;
  }
}

@media (max-width: 768px) {
  .pflegebox-info-card {
    padding: 30px 25px;
  }

  .pflegebox-money-badge {
    font-size: 1.5rem;
    padding: 12px 20px;
  }

  .pflegebox-info-title {
    font-size: 1.6rem;
  }

  .pflegebox-info-description {
    font-size: 1rem;
  }

  .pflegebox-options {
    grid-template-columns: 1fr;
    gap: 15px;
  }

  .pflegebox-question {
    font-size: 1.1rem;
  }

  .pflegebox-option-card {
    padding: 25px 20px;
  }

  .pflegebox-cta-btn {
    width: 100%;
    padding: 12px 30px;
  }
}
</style>

