  margin-bottom: 20px;
  border-left: 4px solid #C12624;
}

.form-actions {
  margin-top: 30px;
}

.btn {
  padding: 14px 32px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.3s;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.btn-primary {
  background: #C12624;
  color: white;
  width: 100%;
}

.btn-primary:hover:not(:disabled) {
  background: #a01f1d;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(193,38,36,0.3);
}

.btn-primary:disabled {
  background: #ccc;
  cursor: not-allowed;
}

.spinner {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  100% { transform: rotate(360deg); }
}

.form-footer {
  text-align: center;
  margin-top: 20px;
}

.form-footer p {
  margin: 10px 0;
  color: #666;
}

.form-footer a {
  color: #C12624;
  font-weight: 600;
  text-decoration: none;
}

.form-footer a:hover {
  text-decoration: underline;
}

@media (max-width: 768px) {
  .login-wrapper {
    padding: 30px 20px;
  }
}
</style>

